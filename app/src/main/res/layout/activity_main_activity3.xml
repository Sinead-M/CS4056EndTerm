<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.p13134841.cs4056endterm.MainActivity3Activity">

    <TextView
        android:id="@+id/RestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stables"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/dealstab"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RestTitle"
        android:text="Todays Deals"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/menutab"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RestTitle"
        android:layout_toRightOf="@id/dealstab"
        android:text="Menu"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RestTitle"
        android:layout_toRightOf="@id/menutab"
        android:text="Location"
        android:textAllCaps="false"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@id/menutab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
