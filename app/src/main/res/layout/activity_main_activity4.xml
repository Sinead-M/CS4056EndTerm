<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.p13134841.cs4056endterm.MainActivity3Activity"
    android:background="#66FF66">

    <TextView
        android:id="@+id/RestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stables"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/dealstab"
        android:background="@drawable/new_button"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/RestTitle"
        android:text="@string/deals"
        style="@style/button_text"
        android:textSize="13dp"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/menutab"
        android:background="@drawable/selected_button"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_below="@id/RestTitle"
        android:layout_centerHorizontal="true"
        android:text="@string/menu"
        style="@style/button_text"
        android:textSize="13dp"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/locationtab"
        android:background="@drawable/new_button"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_below="@id/RestTitle"
        android:layout_alignParentRight="true"
        android:text="@string/location"
        style="@style/button_text"
        android:textSize="13dp"
        android:textAllCaps="false"/>

    <!--Scroll window to hold menu items-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/locationtab"
        android:layout_margin="10dp">

        <LinearLayout
            android:id="@+id/menuView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

