<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.p13134841.cs4056endterm.MainActivity"
    >

    <ImageView
        android:id="@+id/ullogo"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:src="@drawable/ulfoodlogo"
        />

    <TextView
        android:id="@+id/appinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the best deals in your favourite"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/ullogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/appinfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-Campus Restaurants"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_below="@+id/appinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />


    <Button
        android:background="@drawable/new_button"
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:layout_gravity="center_horizontal"
        style="@style/button_text"
        android:layout_below="@id/appinfo2"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>